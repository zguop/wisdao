<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/wis_bg_grey">

    <FrameLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <FrameLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/titleBar"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/footer"
            android:background="?attr/colorPrimary"/>

    <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="#99ffffff">

        <TextView
                android:id="@+id/folder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/wis_svg_ic_oblique_triangle"
                android:drawableEnd="@drawable/wis_svg_ic_oblique_triangle"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:textColor="?attr/colorPrimary"
                android:textSize="15sp"
                tools:text="全部图片"
                tools:textColor="#f00"/>

        <TextView
                android:id="@+id/preview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|end"
                android:minWidth="80dp"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:textColor="?attr/colorPrimary"
                tools:text="预览(0)"
                tools:textColor="#f00"/>

        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/preview"
                android:layout_toStartOf="@id/preview"
                android:background="?attr/colorPrimary"/>

    </RelativeLayout>
</RelativeLayout>